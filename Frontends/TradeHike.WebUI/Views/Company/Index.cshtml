@model List<ResultCompanyDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
    int count = 0;
}
<head>
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#companyTable').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/Turkish.json"
                }
            });
        });
    </script>
    <style>
        table.dataTable thead th,
        table.dataTable tbody td {
            text-align: center; /* Hücreleri ortala */
            vertical-align: middle; /* Dikey hizalama */
            padding: 10px 15px; /* Tüm hücreler için padding */
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0.2em 1em;
            margin-left: 2px;
            border: 1px solid #ddd;
            border-radius: 3px;
            background: #343a40;
            color: #fff;
        }

            .dataTables_wrapper .dataTables_paginate .paginate_button.current {
                background: #007bff;
                color: white !important;
            }

            .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
                background: #0056b3;
                color: white !important;
            }
    </style>
</head>

<div class="page-content">
    <div class="container-fluid">
        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Şirket Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Şirketlerle ilgili işlemleri bu sayfa üzerinden yapabilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table id="companyTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ad</th>
                                        <th>Değerleme</th>
                                        <th>Katılım Tarihi</th>
                                        <th>Sektör</th>
                                        <th>Şehir</th>
                                        <th>Ülke</th>
                                        <th>Kıta</th>
                                        <th>Kuruluş Yılı</th>
                                        <th>Finansman</th>
                                        <th>Detaylar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td>@item.Valuation</td>
                                            <td>@item.DateJoined.ToShortDateString()</td>
                                            <td>@item.Industry</td>
                                            <td>@item.City</td>
                                            <td>@item.Country</td>
                                            <td>@item.Continent</td>
                                            <td>@item.YearFounded</td>
                                            <td>@item.Funding</td>
                                            <td><a href="/CompanyList/CompanyDetail/@item.Id" class="btn btn-outline-dark btn-sm">Detaylar</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->
            </div>
            <!-- end col -->
        </div>
        <!-- end page title -->
    </div> <!-- container-fluid -->
</div>

